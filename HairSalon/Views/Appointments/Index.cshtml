@using HairSalon.Models

@model List<HairSalon.Models.Appointment>

<h1>Appointments</h1>
<hr />

@if (@Model.Count == 0)
{
  <h3>No appointments have been added yet!</h3>
}

<ul>
  @foreach (Appointment appt in Model)
  {
    <li>Appointment for @appt.Stylist.Name with @appt.Client.Name at @Html.ActionLink($"{appt.DateTime}", "Details", new { id = appt.AppointmentId })</li>
  }
</ul>
<hr />

@Html.ActionLink("Add new appointment", "Create", new { }, new {@role = "button", @class = "btn"})
