@model HairSalon.Models.Appointment

<h2>Are you sure you want to delete this appointment?</h2>

<p>Appointment for @Html.DisplayFor(model => model.Stylist.Name) with @Html.DisplayFor(model => model.Client.Name) at @Html.DisplayFor(model => model.DateTime)</p>
@using (Html.BeginForm())
{
  <input type="submit" value="Delete" />
}

<p>@Html.ActionLink("Back to appointment", "Details", new { id = Model.AppointmentId })</p>