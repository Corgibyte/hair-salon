@model HairSalon.Models.Appointment

<h2>Appointment Details</h2>
<hr />
<h3>Appointment for @Html.DisplayFor(model => model.Client.Stylist.Name) with @Html.DisplayFor(model => model.Client.Name)</h3>

<h4>Appointment at @Html.DisplayFor(model => model.DateTime) for @Html.DisplayFor(model => model.Duration) minutes</h4>

<p>@Html.DisplayFor(model => model.Notes)</p>

<p>@Html.ActionLink("Back to client appointments", "ViewAppts", "Clients", new { id = Model.ClientId })</p>
<p>@Html.ActionLink("Edit appointment", "Edit", new { id = Model.AppointmentId })</p>
<p>@Html.ActionLink("Delete appointment", "Delete", new { id = Model.AppointmentId })</p>