@using HairSalon.Models
@model List<HairSalon.Models.Appointment>

<h3>Appointments for @ViewBag.StylistName with @ViewBag.ClientName</h3>

@if (Model.Count == 0)
{
  <h5>No appointments for this client</h5>
}

<ul>
  @foreach (Appointment appt in Model)
  {
    <li>@Html.ActionLink($"{appt.DateTime:yyyy-MM-dd HH:mm}", "Details", "Appointments", new { id = appt.AppointmentId })</li>
  }
</ul>

@Html.ActionLink("New appointment", "Create", "Appointments", new { }, new { @role="button", @class="btn"})
