@using HairSalon.Models;
@model List<HairSalon.Models.Client>;

<h1>Clients</h1>

<hr />
@if (@Model.Count == 0)
{
  <h6>No clients have been added yet!</h6>
}

<ul>
  @foreach (Client client in Model)
  {
    <li>@Html.ActionLink($"{client.Name}", "Details", new { id = client.ClientId }) with @client.Stylist.Name</li>
  }
</ul>
<hr />

@Html.ActionLink("Add new client", "Create", new { }, new { @role="button", @class="btn" })