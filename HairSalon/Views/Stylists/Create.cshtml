@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist

<h4>Add a new stylist</h4>
@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)
  <select asp-for="DayOff" asp-items="Html.GetEnumSelectList<DayOfWeek>()">
  <option value="">Choose a day</option>
</select>
  <input type="submit" value="Add a new stylist" />
}

<p>@Html.ActionLink("Show all stylists", "Index")</p>