@{
  Layout = "_Layout";
}

@using HairSalon.Models
@model List<HairSalon.Models.Client>

@if (Model.Count == 0)
{
  <h5>No clients for this stylist</h5>
}
<ul>
  @foreach (Client client in Model)
  {
    <li>@Html.ActionLink($"{client.Name}", "Details", "Clients", new { id = client.ClientId })</li>
  }
</ul>

<p>@Html.ActionLink("Add client", "Create", "Clients")</p>

<p>@Html.ActionLink("Back to stylist", "Details", new { id = ViewBag.StylistId })</p>