@using HairSalon.Models
@model List<HairSalon.Models.Client>

<h3>Clients for @ViewBag.StylistName:</h3>

@if (Model.Count == 0)
{
  <h5>No clients for this stylist</h5>
}
<ul>
  @foreach (Client client in Model)
  {
    <li>@Html.ActionLink($"{client.Name}", "Details", "Clients", new { id = client.ClientId })</li>
  }
</ul>

<div class="btn-group-vertical" role="group">
  @Html.ActionLink("Add client", "Create", "Clients", new { }, new { @role="button", @class="btn" })
  @Html.ActionLink("Back to stylist", "Details", new { id = ViewBag.StylistId }, new { @role="button", @class="btn" })
</div>