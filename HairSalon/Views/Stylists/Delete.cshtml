@model HairSalon.Models.Stylist

<h2>Are you sure you want to delete this stylist?</h2>
<h3>This will also delete any associated clients and appointments</h3>

<p>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</p>

<div class="btn-group-vertical">
  @using (Html.BeginForm())
  {
    <button class="btn btn-input" type="submit">Delete stylist</button>
  }

  @Html.ActionLink("Back to stylist", "Details", new { id = Model.StylistId }, new { @role="button", @class="btn" })
</div>