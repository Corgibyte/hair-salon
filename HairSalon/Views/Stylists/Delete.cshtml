@model HairSalon.Models.Stylist

<h2>Are you sure you want to delete this stylist?</h2>
<h6>This will also delete any associated clients and appointments</h6>

<div class="innerPane">
  <h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h3>

  @using (Html.BeginForm())
  {
    <button class="btn btn-input" type="submit">Delete stylist</button>
  }
</div>

@Html.ActionLink("Back to stylist", "Details", new { id = Model.StylistId }, new { @role="button", @class="btn" })