@model HairSalon.Models.Stylist

<h2>Edit</h2>

<h4>Edit this stylist: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.StylistId)

  @Html.LabelFor(model => model.Name, new {@class = "form-label"})
  @Html.EditorFor(model => model.Name, new { htmlAttributes = new {@class = "form-control"}})
  <button class="btn btn-input" type="submit">Edit stylist</button>
}